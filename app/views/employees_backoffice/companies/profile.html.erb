<div class="container">
  <div>
    <h1 class="title">Dados da empresa</h1>
  </div>

  <div class="card">
    <div class="card-header">
      <div class="card-header-title">Nome: <%= @company.name %></div>

      <% if @company.avatar.attached? %>
        <div class="card-header-icon">
          <%= image_tag @company.avatar, class: 'image is-96x96' %>
        </div>
      <% end %>
    </div>

    <div class="card-body p-2">
      <p class="subtitle">sufixo de email: <%= @company.email_suffix %></p>
      <p class="subtitle">Cnpj: <%= @company.cnpj %></p>
      <p class="subtitle">site: <%= @company.site %></p>
      <p class="subtitle">pa√≠s: <%= @company.country %></p>
      <p class="subtitle">estado: <%= @company.state %></p>
      <p class="subtitle">cidade: <%= @company.city %></p>
      <p class="subtitle">cep: <%= @company.zip_code %></p>
      <p class="subtitle">bairro: <%= @company.neighborhood %></p>
      <p class="subtitle">logradouro: <%= @company.logradouro %></p>
      <p class="subtitle">criado em: <%= @company.created_at %></p>
      <p class="subtitle">atualizado em: <%= @company.updated_at %></p>
    </div>

    <div class="card-footer">
      <div class="card-footer-item">
        <%= link_to  "Editar", edit_employees_backoffice_company_path(@company), class: 'button is-warning' %>
      </div>
    </div>
  </div>
</div>