<div class="columns is-multiline">
    <div class="column is-12">
        <h1 class="title">Reprovar candidatura</h1>
    </div>

    <div class="column is-12">
        <%= form_with(model: [:employees_backoffice, @decline_application], local: true) do |form| %>
            <% if @decline_application.errors.any? %>
                <p class="has-text-danger">Encontramos o(s) seguinte(s) erro(s):</p>
                <div class="notification is-danger is-light">
                    <ol>
                        <% @decline_application.errors.full_messages.each do |message| %>
                            <li><strong><%= message %></strong></li>
                        <% end %>
                    </ol>
                </div>
            <% end %>

            <div class="field">
                <%= form.label :justification, class: 'label' %>
                <div class="control">
                    <%= form.text_field :justification, class: 'input' %>
                </div>
            </div>
            
            <%= form.submit 'Confirmar', class: 'button is-link' %>
        <% end %>
    </div>
</div>